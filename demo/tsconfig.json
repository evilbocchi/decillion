{
    "compilerOptions": {
        // required
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "plugins": [
            {
                "transform": "rbxts-transformer-flamework",
                "exclude": [
                    "**/node_modules/**"
                ],
                "obfuscation": false,
                "noSemanticDiagnostics": true
            },
            {
                "transform": "../transformer/out"
            }
        ],
        "jsx": "react",
        "jsxFactory": "React.createElement",
        "jsxFragmentFactory": "React.createFragment",
        "module": "commonjs",
        "moduleResolution": "Node",
        "noLib": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "moduleDetection": "force",
        "strict": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "typeRoots": [
            "node_modules/@rbxts",
            "node_modules/@flamework",
            "node_modules/@decillion"
        ],
        // configurable
        "rootDir": "src",
        "outDir": "out",
        "baseUrl": "src",
        "incremental": false,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}