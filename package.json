{
    "name": "decillion",
    "version": "0.0.0",
    "description": "A Million.js-inspired high-performance UI renderer for Roblox-TS",
    "main": "out/index.js",
    "types": "out/index.d.ts",
    "scripts": {
        "build": "npm run build:runtime && npm run build:transformer && npm run build:demo",
        "build:demo": "cd demo && npm run build",
        "build:runtime": "cd runtime && npm run build",
        "build:transformer": "cd transformer && npm run build",
        "dev": "concurrently --prefix none \"cd demo && npm run dev\" \"cd runtime && npm run dev\" \"cd transformer && npm run dev\"",
        "test": "vitest",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "roblox",
        "roblox-ts",
        "ui",
        "renderer",
        "performance",
        "million"
    ],
    "author": "evilbocchi",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@rbxts/compiler-types": "^3.0.0-types.0",
        "@rbxts/types": "^1.0.879",
        "@types/node": "^24.3.0",
        "@types/react": "^19.1.12",
        "concurrently": "^9.2.1",
        "eslint": "^9.34.0",
        "eslint-plugin-roblox-ts": "^1.1.0",
        "prettier": "^3.6.2",
        "roblox-ts": "^3.0.0",
        "rojo": "^1.0.2",
        "rokit-npm": "^1.0.1",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.40.0"
    },
    "dependencies": {
        "@rbxts/react": "^17.2.3",
        "@rbxts/react-roblox": "^17.2.3",
        "@rbxts/services": "^1.5.1"
    },
    "files": [
        "out/**/*",
        "README.md",
        "LICENSE"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/evilbocchi/decillion.git"
    }
}
