        },
        {
            "label": "Build Runtime",
            "type": "shell",
            "command": "npm run build:runtime",
            "isBackground": false,
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "Build Transformer",
            "type": "shell",
            "command": "npm run build:transformer",
            "isBackground": false,
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "Development Mode",
            "type": "shell",
            "command": "npm run dev",
